@model IEnumerable<PhoneShop.Models.ContactUs.ContactMessage>

<div style="border-radius: 10px; padding: 10px; background-color: #f0f0f0;">
    <h1>Contact Messages</h1>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Comment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message.FirstName</td>
                    <td>@message.LastName</td>
                    <td>@message.Email</td>
                    <td>@message.Comment</td>
                </tr>
            }
        </tbody>
    </table>
</div>
