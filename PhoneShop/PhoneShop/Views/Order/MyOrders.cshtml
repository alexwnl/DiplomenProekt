@model IEnumerable<PhoneShop.Models.Order.OrderIndexVM>

@{
    ViewData["Title"] = "MyOrders";
}

<h1>MyOrders</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="mb-3">
    <label for="searchString" class="form-label">Phone name</label>
    <input type="text" class="form-control rounded-pill" name="searchString" id="searchString">
</div>
<button type="submit" class="btn btn-primary rounded-pill">Filter</button>

<div class="table-responsive mt-3">
    <table class="table table-striped table-hover rounded">
        <thead class="bg-primary text-white rounded">
            <tr>
                <th>Order Date</th>
                <th>User</th>
                <th>Model</th>
                <th>Picture</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.User)</td>
                    <td>@Html.DisplayFor(modelItem => item.Model)</td>
                    <td><img src="@Html.DisplayFor(modelItem => item.Picture)" alt="Image" width="100"></td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    .form-control {
  border-radius: 25px;
  border: none;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  padding: 10px;
  margin-right: 10px;
}

.btn-primary {
  border-radius: 30px;
  border: none;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  padding: 10px 20px;
  background-color: #007bff;
  color: #fff;
}

.btn-primary:hover {
  background-color: #0069d9;
}

.table-responsive {
  overflow-x: auto;
}

.table {
  width: 100%;
  max-width: 100%;
  margin-bottom: 1rem;
  background-color: transparent;
  font-size: 14px;
}

.table th,
.table td {
  vertical-align: middle;
}

.table thead th {
  background-color: #f5f5f5;
  color: #333;
  font-weight: bold;
  text-align: left;
}

.table tbody tr:hover {
  background-color: #f5f5f5;
}
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
